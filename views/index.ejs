<div class="author">
  <h1 class="author__heading">Hi, I am Raddy.</h1>
  <p class="author__body">Web developer and content creator.</p>
</div>

<img
  src="/img/hero-image.webp"
  alt="person looking out through window"
  class="hero-image"
  width="981"
  height="528"
/>

<!-- prettier-ignore -->
<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(({ id, title, createdAt }) => { %>
      <li>
        <a href="/post/<%= id %>">
          <span><%= title %></span>
          <span class="article-list__date">
            <%= dateFormat(createdAt, 'yyyy/MM/dd HH:mm') %>
          </span>
        </a>
      </li>
      <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
